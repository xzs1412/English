@model IEnumerable<Kid.English.Phrases.Dto.PhraseDto>

@{
    ViewBag.Title = "AllDeletedPhrases";
}

<h2>AllDeletedPhrases</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SentenceHtml)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChineseMean)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SentenceHtml)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChineseMean)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
